# ========================================
# HUNGER ANALYTICS PLATFORM - Environment Variables
# Copy this file to .env and fill in your actual values
# ========================================

# Database Configuration
DATABASE_URL=postgresql://hunger_analytics:dev_password_123@localhost:5432/hunger_analytics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hunger_analytics
DB_USER=hunger_analytics
DB_PASSWORD=dev_password_123

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys (Free Registration Required)
# ========================================

# FAO FAOSTAT API
# Register at: http://www.fao.org/faostat/en/#data
FAO_API_KEY=your_fao_api_key_here
FAO_BASE_URL=https://fenixservices.fao.org/faostat/api/v1

# World Bank Open Data API
# No registration required for basic usage
# Docs: https://datahelpdesk.worldbank.org/knowledgebase/articles/889392
WORLDBANK_BASE_URL=https://api.worldbank.org/v2

# WHO Global Health Observatory API
# Register at: https://www.who.int/data/gho
WHO_API_KEY=your_who_api_key_here
WHO_BASE_URL=https://ghoapi.azureedge.net/api

# ACLED Conflict Data (Free Tier)
# Register at: https://acleddata.com/curated-data-files/
ACLED_API_KEY=your_acled_api_key_here
ACLED_EMAIL=your_email@example.com
ACLED_BASE_URL=https://api.acleddata.com/acled/read

# UN Data API
# Some endpoints require registration
UN_DATA_BASE_URL=https://data.un.org/ws/rest/data

# Rate Limiting Settings
# ========================================
FAO_REQUESTS_PER_HOUR=1000
WHO_REQUESTS_PER_DAY=1000
ACLED_REQUESTS_PER_YEAR=2500

# Application Settings
# ========================================
APP_NAME=Hunger Analytics Platform
APP_VERSION=1.0.0
REGION_FOCUS=sub_saharan_africa

# Data Storage Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_CACHE_PATH=./data/cache

# Logging Configuration
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION=1 week
LOG_RETENTION=1 month

# Dashboard Configuration
STREAMLIT_PORT=8501
DASHBOARD_TITLE=Sub-Saharan Africa Hunger Analytics

# Deployment (Week 4)
# ========================================
CLOUD_PROVIDER=gcp
PROJECT_ID=your_gcp_project_id
REGION=us-central1

# Production Database (when deploying)
PROD_DATABASE_URL=your_production_database_url

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090